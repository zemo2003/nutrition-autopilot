{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@nutrition/contracts": ["packages/contracts/src/index.ts"],
      "@nutrition/db": ["packages/db/src/index.ts"],
      "@nutrition/importers": ["packages/importers/src/index.ts"],
      "@nutrition/nutrition-engine": ["services/nutrition-engine/src/index.ts"]
    },
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "declaration": true,
    "sourceMap": true
  }
}
